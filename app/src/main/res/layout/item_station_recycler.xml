<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginTop="5dp"
    android:background="@drawable/view_holder_background">


    <LinearLayout
        android:id="@+id/text_view_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_margin="15dp"
        android:layout_toStartOf="@id/progress_bar_left"
        android:orientation="vertical">


        <TextView
            android:id="@+id/station_title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:textSize="15sp"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/station_info_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:textSize="15sp"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/station_distance_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:textSize="15sp"
            android:textColor="#000"/>


    </LinearLayout>


    <com.budiyev.android.circularprogressbar.CircularProgressBar
        android:id="@+id/progress_bar_left"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        app:animateProgress="true"
        app:backgroundStrokeColor="#1b191a"
        app:backgroundStrokeWidth="8dp"
        app:drawBackgroundStroke="true"
        app:foregroundStrokeCap="butt"
        app:foregroundStrokeColor="#ff0004"
        app:foregroundStrokeWidth="8dp"
        app:indeterminate="false"
        app:indeterminateMinimumAngle="45"
        app:indeterminateRotationAnimationDuration="1200"
        app:indeterminateSweepAnimationDuration="600"
        app:maximum="100"
        app:progress="50"
        app:progressAnimationDuration="100"
        app:startAngle="270" />

</RelativeLayout>
